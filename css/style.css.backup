    text-decoration: underline;
}

/* --- Recruit Section --- */
.recruit__banner {
    background: #ccc;
    /* Fallback */
    background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('../images/recruit_staff.png');
    background-size: cover;
    background-position: center;
    color: var(--white);
    padding: 60px 20px;
    text-align: center;
    border-radius: 20px;
}

.recruit__title {
    font-size: 2rem;
    margin-bottom: 15px;
    letter-spacing: 0.1em;
}

.recruit__text {
    margin-bottom: 30px;
    font-size: 1rem;
}

/* Section Backgrounds */
.about {
    background-color: var(--bg-gray);
}

.recommended {
    background-color: var(--bg-accent-light);
}

.campaign {
    background-color: var(--bg-gray);
}

.news {
    background-color: var(--bg-light);
}

.shop-list {
    background-color: var(--white);
}

/* Responsive Adjustments */
@media (max-width: 768px) {
    .news__item {
        flex-direction: column;
        gap: 5px;
    }

    .concept__container {
        flex-direction: column;
    }

    .result-card {
        flex-direction: column;
    }

    .route__item {
        flex-direction: column;
        text-align: center;
    }

    .voice-card {
        flex-direction: column;
        text-align: center;
    }

    .form-container {
        padding: 30px 20px;
    }

    .options__table th,
    .options__table td {
        display: block;
        width: 100%;
    }

    .options__table th {
        background: transparent;
        color: var(--text-color);
        padding-bottom: 5px;
    }

    .options__table td {
        padding-top: 0;
        border-bottom: 1px solid #eee;
    }
}
}